<div id="title">
  <h2>
    <%= [@video['artist'], @video['title']].join(" - ") %>
  </h2>
</div>
<div id="video_page">
  <div id="video">
    <iframe width="420" height="315" src="http://www.youtube.com/embed/<%= @video['url'] %>" frameborder="0" allowfullscreen></iframe>
  </div>

  <div id="details">
    <dl>
      <dt>Category: </dt>
      <dd><%= @video['category']%></dd>
      <dt>Genre: </dt>
      <dd><%= @video['genre']%></dd>
      <dt>Description: </dt>
      <dd><%= @video['description']%></dd>
      <dt>Views: </dt>
      <dd><%= @video['views']%></dd>
    </dl>
  </div>

  <div>
    <a href="/videos/<%= @video['id'] %>/edit">EDIT</a>
    <a href="/videos/<%= @video['id'] %>/delete">DELETE</a>
  </div>
</div>

